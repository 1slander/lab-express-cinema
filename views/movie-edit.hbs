<h2>Edit the film: {{movie.title}}</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
  <input type="text" name="title" id="title" value="{{movie.title}}" />
  <input type="text" name="director" id="director" value="{{movie.director}}" />
  <input type="text" name="image" id="image" value="{{movie.image}}" />
  <input
    type="text"
    name="description"
    id="description"
    value="{{movie.description}}"
  />
  <input type="submit" value="send movie to database" />
</form>